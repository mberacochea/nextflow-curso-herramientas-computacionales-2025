/*
 * Pipeline configuration
 */

params {
    // Input/output options
    reference = null
    reads = null
    outdir = "results"
}

profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
    }

    conda {
        conda.enabled = true
        conda.useMicromamba = true
    }
}
